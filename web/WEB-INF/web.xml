<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employer</servlet-name>
        <servlet-class>app.servlets.EmployerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>employer</servlet-name>
        <url-pattern>/employer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>app.servlets.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reg</servlet-name>
        <servlet-class>app.servlets.RegistrServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>reg</servlet-name>
        <url-pattern>/registr</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>app.servlets.UsersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>joboffer</servlet-name>
        <servlet-class>app.servlets.JobOfferServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>joboffer</servlet-name>
        <url-pattern>/joboffer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>jobapplication</servlet-name>
        <servlet-class>app.servlets.JobApplicationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jobapplication</servlet-name>
        <url-pattern>/jobapplication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employment</servlet-name>
        <servlet-class>app.servlets.EmploymentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>employment</servlet-name>
        <url-pattern>/employment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exit</servlet-name>
        <servlet-class>app.servlets.ExitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>exit</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>personalarea</servlet-name>
        <servlet-class>app.servlets.PersonalArea</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>personalarea</servlet-name>
        <url-pattern>/personalarea</url-pattern>
    </servlet-mapping>
</web-app>